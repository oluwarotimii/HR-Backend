{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/config/*": ["config/*"]
    }
  },
  "include": [
    "src/index.ts",
    "src/config/**/*",
    "src/utils/**/*",
    "src/models/**/*",
    "src/middleware/**/*",
    "src/controllers/**/*",
    "src/api/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src/__tests__",
    "src/simple-test.ts"
  ]
}